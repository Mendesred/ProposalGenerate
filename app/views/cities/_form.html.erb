<div class="col-lg-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      Formulario de criação
    </div>

    <div class="panel-body">
      <div class="col-lg-12">
        <%= form_for(@city) do |f| %>
        <% if @city.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@city.errors.count, "error") %> prohibited this city from being saved:</h2>

          <ul>
            <% @city.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <div class="inline">
          <div class="row">
            <div class="col-sm-4">
              <div class="field">
                <%= f.label :nome %><br>
                <%= f.text_field :nome, class:'form-control' %>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="field">
                <%= f.label :feriado %><br>
                <%= f.text_field :feriado,class:'form-control' %>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="field">
                <%= f.label :valeTransporte %><br>
                <%= f.text_field :valeTransporte, :value => number_with_precision(f.object.valeTransporte,precision: 2, locale: :"pt-BR"),class:'form-control', placeholder:'0,01',style:"width:100%",:data => {:mask=> '99.99'} %>
              </div>
            </div>
          </div>
        </div>
        <div class="inline">
          <div class="row">
            <div class="col-sm-4">
              <div class="field">
                <%= f.label :issqn %><br>
                <%= f.text_field :issqn, :value => number_with_precision(f.object.issqn,precision: 2, locale: :"pt-BR"),class:'form-control', placeholder:'0,01',style:"width:100%",:data => {:mask=> '99.99'} %>
              </div>
            </div>
          </div>   
        </div>
        <div class="actions">
          <button type="submit" class="btn btn-outline btn-success">Salvar</button>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
