<h1 class="page-header topHeader">Lista de Empresas</h1>

<div class="panel panel-default">
  <div class="panel-heading">
    <strong>Empresas</strong>
  </div>

  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Nome da Compania</th>
            <th>Irrf</th>
            <th>Csll</th>
            <th>Pis</th>
            <th>Cofins</th>
            <th style="width: 20%">Seguro acidente de trabalho</th>
            <th style="text-align: center;">Atualizado</th>
            <th colspan="1" class="espaco3E" style="width: 9%"></th>
          </tr>
        </thead>

        <tbody>
          <% @companies.each do |company| %>
          <tr>
            <td><%= company.name_company %></td>
            <td><%= company.irrf %></td>
            <td><%= company.csll %></td>
            <td><%= company.pis %></td>
            <td><%= company.cofins %></td>
            <td><%= company.seguro_aci_trabalho %></td>
            <td style="text-align: center;"><%= update_date(company.updated_at) %></td>
            <td>
              <%= link_to company,class:"btn btn-default btn-sm ", type:"button",title:"Exibir" do %>
                <i class="fa fa-search"></i>
              <% end %>
              <%= link_to edit_company_path(company),class:"btn btn-default btn-sm ", type:" button",title:"Editar" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <!--<#%= link_to company, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-default btn-danger btn-sm ", type:"button",title:"Excluir" do %>
                <i class="fa fa-trash-o"></i>
              <#% end %>-->
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>