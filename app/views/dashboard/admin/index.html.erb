<h1 class="page-header">Pagina principal</h1>


<div class="panel panel-default">
  <div class="panel-heading">
    <strong>Lista de Usuários</strong>

    <%= link_to new_dashboard_admin_path ,class:"btn btn-default btn-sm pull-right ajusteButton", type:"button" do %>
      Criar novo Usuários
    <% end %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th style="width:50px; text-align: center" >#</th>
            <th>Nome</th>
            <th>E-mail</th>
            <th>tipo de Acesso</th>
						<th colspan="1"></th>
          </tr>
        </thead>

        <tbody>
        <% @admins.each do |admin| %>
          <tr>
            <td style="width:50px; text-align: center" ><%= admin.id %></td>
            <td><%= admin.nome %></td>            
            <td><%= admin.email %></td>
            <td><%= admin.privilegio_i18n %></td>
						<td style="width:175px" >
              <%= link_to edit_dashboard_admin_path(admin),class:"btn btn-default btn-sm ", type:"button" do %>
                <i class="fa fa-edit"></i> Editar
              <% end %>
              <% if policy(@admins).destroy? %>
                <%if current_admin.id != admin.id	 %>
                  <%= link_to dashboard_admin_path(admin), method: :delete, data: { confirm: 'Voce deseja realmente excluir o registro (<b>#{@admins.emal}</b>) ?' },class:"btn btn-default btn-sm ", type:"button" do %>
                  <i class="fa fa-trash-o"></i> Excluir
                  <% end %>
                <% end %>
              <% end %>
              
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>
<br>

