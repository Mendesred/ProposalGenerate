<div class="col-lg-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      Formulario de criação
    </div>

    <div class="panel-body">
      <div class="col-lg-12">
        <%= form_for(@period) do |f| %>
        <% if @period.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@period.errors.count, "error") %> prohibited this period from being saved:</h2>

          <ul>
            <% @period.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <div class="inline">
          <div class="row">
            <div class="col-sm-4">
              <div class="field">
                <div class="field">
                  <%= f.label :periodo %><br>
                  <%= f.text_field :periodo,class:'form-control'%>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="actions">
          <button type="submit" class="btn btn-outline btn-success">Salvar</button>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>