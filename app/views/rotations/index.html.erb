<h1 class="page-header topHeader">Lista de Escalas</h1>

<div class="panel panel-default">
  <div class="panel-heading">
    <strong>Escalas</strong>
  </div>
    
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr style="font-size: 11px;">
            <th style="width: 3%;">id</th>
            <th style="width: 20%;">Tipo escala</th>
            <th>Efetivo</th>
            <th>Qtd. funcionarios</th>
            <th>Period</th>
            <th>Dias do mês</th><!--Fator escala-->
            <th>Dias trabalhadas<br> no mês</th>
            <th style="font-size: 10px;text-align: center;">Data de Atualização</th>

            <th colspan="1" class="espaco3E" style="width: 8%"></th>
          </tr>
        </thead>

        <tbody>
          <% @rotations.each do |rotation| %>
            <tr>
              <td><%= rotation.id %></td>
              <td><%= rotation.tipo_escala %></td>
              <td><%= rotation.efetivo %></td>
              <td><%= rotation.qtd_funcionarios %></td>
              <td><%= rotation.period.periodo %></td>
              <td><%= rotation.fator_escala %></td>
              <td><%= rotation.dias_trabalhados %></td>
              <td style="font-size: 10px;padding-right: 0px;padding-left: 2px;text-align: center;"><%= update_date(rotation.updated_at) %></td>
              
              <td>
                <%= link_to rotation,class:"btn btn-default btn-sm ", type:"button",title:"Exibir" do %>
                  <i class="fa fa-search"></i>
                <% end %>
                <%= link_to edit_rotation_path(rotation),class:"btn btn-default btn-sm ", type:" button",title:"Editar" do %>
                  <i class="fa fa-edit"></i>
                <% end %>
                <!--<#%= link_to rotation, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-default btn-danger btn-sm ", type:"button",title:"Excluir" do %>
                  <i class="fa fa-trash-o"></i>
                <#% end %>-->
              </td>
            </tr> 
          <% end %>
        </tbody>
      </table>
    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>