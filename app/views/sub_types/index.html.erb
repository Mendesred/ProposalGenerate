<h1 class="page-header topHeader">Listando Sub-categoria
		<%= link_to equipaments_path,class:"btn btn-default dropdown-toggle pull-right", type:"button" do %>
		Voltar para Equipameto ou Acessorios  
		<% end %>
</h1>

<div class="panel panel-default">
	<div class="panel-heading">
		<strong>Lista de Sub-categorias</strong>
				<%= link_to new_sub_type_path,class:"btn btn-success dropdown-toggle pull-right", type:"button" do %>
				Nova Sub-categoria  
		<% end %>
	</div>

	<div class="panel-body">
		<div class="table-responsive">
			<table class="table table-striped table-bordered table-hover">
				<thead>
					<tr>
						<th>Sub-categoria</th>
						<th colspan="1" style="width: 5%"></th>
					</tr>
				</thead>

				<tbody>
					<% @sub_types.each do |sub_type| %>
					<tr>
						<td><%= sub_type.name_sub_type %></td>
						<td><!--<#%= link_to sub_type,class:"btn btn-default btn-sm ", type:"button",title:"Exibir" do %>
									<i class="fa fa-search"></i>
								<#% end %>--> 
								<%= link_to edit_sub_type_path(sub_type),class:"btn btn-default btn-sm ", type:" button",title:"Editar" do %>
									<i class="fa fa-edit"></i>
								<% end %>
						</td>
						<!--td><#%= link_to 'Destroy', sub_type, method: :delete, data: { confirm: 'Are you sure?' } %></td-->
					</tr>
			<% end %>
		</tbody>
	</table>
</div>
<br>