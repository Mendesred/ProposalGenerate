<h1 class="page-header topHeader">Lista de Categorias
    <%= link_to equipaments_path,class:"btn btn-default dropdown-toggle pull-right", type:"button" do %>
    Voltar para Equipameto ou Acessorios  
    <% end %>
</h1>

<div class="panel panel-default">
  <div class="panel-heading">
    <strong>Categoria</strong>
        <%= link_to new_type_equipament_path,class:"btn btn-success dropdown-toggle pull-right", type:"button" do %>
        Nova categoria  
    <% end %>
  </div>

  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Nome da Categoria</th>
            <th colspan="1" style="width: 9%"></th>
          </tr>
        </thead>

        <tbody>
          <% @type_equipaments.each do |type_equipament| %>
          <tr>
            <td><%= type_equipament.name_type %></td>
            <td>
              <%= link_to type_equipament,class:"btn btn-default btn-sm ", type:"button",title:"Exibir" do %>
              <i class="fa fa-search"></i>
              <% end %>
              <%= link_to edit_type_equipament_path(type_equipament),class:"btn btn-default btn-sm ", type:" button",title:"Editar" do %>
              <i class="fa fa-edit"></i>
              <% end %>
              <!--<#%= link_to company, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-default btn-danger btn-sm ", type:"button",title:"Excluir" do %>
                <i class="fa fa-trash-o"></i>
                <#% end %>-->
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.table-responsive -->
    </div>
    <!-- /.panel-body -->
  </div>